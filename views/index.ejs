<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="style.css" />
    <title>To Read List</title>
  </head>
  <body>
    <header>
      <% if(task == null){ %>

      <form action="/create" method="post">
        <input
          type="text"
          name="task"
          id="task"
          placeholder="Insira o livro que deseja ler"
        />
        <button type="submit" id="addButton">Adicionar</button>
      </form>
      <% } else{ %>

      <form action="/updateOne/<%=task._id%>" method="post">
        <input type="text" name="task" id="task" value="<%=task.task %>" />
        <button type="submit" id="addButton">Atualizar</button>
      </form>

      <% } %>
    </header>

    <section id="tasks">
      <ul>
        <% tasksList.forEach((task)=>{ %>
        <li>
          <%= task.task %> | <%= task.date.toLocaleDateString('pt-br') %>
          <a href="/getById/<%= task._id %>/update">Editar</a>
          <a href="/getById/<%= task._id %>/delete">Apagar</a>
        </li>

        <% }) %>
      </ul>
    </section>

    <% if(taskDelete != null) {%>
    <section id="editScreen">
      <div id="editCard">
        <a href="/">x</a>
        <h2>Confirmação</h2>
        <hr />
        <p>Deseja apagar <b><%= taskDelete.task %></b> da sua lista?</p>
        <a id="btn" href="/">Não</a>
        <a id="btnYes" href="/deleteOne/<%= taskDelete._id %>">Sim</a>
      </div>
    </section>
    <% } %>

    <script src="script.js"></script>
  </body>
</html>
